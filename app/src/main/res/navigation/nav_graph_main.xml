<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/characterListFragment">

    <fragment
        android:id="@+id/characterListFragment"
        android:name="com.example.therickandmorty.view.fragment.CharacterListFragment"
        tools:layout="@layout/fragment_character_list">
        <action
            android:id="@+id/action_characterListFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.example.therickandmorty.view.fragment.CharacterDetailFragment"
        tools:layout="@layout/fragment_character_detail">
        <action
            android:id="@+id/action_characterDetailFragment_to_episodeFragment"
            app:destination="@id/episodeFragment" />
        <action
            android:id="@+id/action_characterDetailFragment_to_locationFragment"
            app:destination="@id/locationFragment" />
    </fragment>
    <fragment
        android:id="@+id/episodeFragment"
        android:name="com.example.therickandmorty.view.fragment.EpisodeFragment"
        android:label="fragment_episode"
        tools:layout="@layout/fragment_episode">
        <argument
            android:name="episode"
            android:defaultValue="1"
            app:argType="string" />
        <action
            android:id="@+id/action_episodeFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/locationFragment"
        android:name="com.example.therickandmorty.view.fragment.LocationFragment"
        android:label="fragment_location"
        tools:layout="@layout/fragment_location" >
        <argument
            android:name="location"
            android:defaultValue="1"
            app:argType="string" />
        <action
            android:id="@+id/action_locationFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
    </fragment>
</navigation>